# Use a login shell
shell -$SHELL

# Setup the status line (http://www.gnu.org/software/screen/manual/html_node/String-Escapes.html)
hardstatus alwayslastline
hardstatus string '%{= G}[ %{b}%H%? %1`%? %{G}][%= %{w}%-w%{bW} %n*%f%t%?(%u)%? %{-}%+w %=%{G}][ %{b}%D %m/%d %{W}%C%a %{G}]'

# Turn welcome message off
startup_message off

# Prevent annoying UTMP logging messages
deflogin off

# Fix residual text after exiting vim
altscreen on

# Use 256 colors
#term screen-256color
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on

# UTF-8 all the things
setenv LC_CTYPE en_US.UTF-8
defutf8 on
defencoding UTF-8

# Prevent screen flicker (visual bell)
vbell off
